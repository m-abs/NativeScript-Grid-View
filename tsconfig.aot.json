{
    "extends": "./tsconfig",
    "compilerOptions": {
        "declaration": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node"
    },
    "files": [
        "angular/index.ts"
    ],
    "angularCompilerOptions": {
        "genDir": ".",
        "skipMetadataEmit": false,
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true
    }
}
